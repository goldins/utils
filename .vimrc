set shell=/bin/zsh

set expandtab
set smarttab
set shiftwidth=2
set tabstop=2
set ai "Auto indent
set si "Smart indent
set wrap "wrap lines
set nu
set rnu
set ignorecase
set smartcase
set mousemodel=extend
set incsearch

" execute pathogen#infect()
syntax on
filetype plugin indent on

syntax enable
set background=dark
" colorscheme afterglow

set paste
